<idea-plugin version="2">
  <name>generate-chained-accessors</name>
  <description>Generate Chained Accessors Plugin</description>
  <resource-bundle>com.rrd.intellij.idea.plugins.gca.Resources</resource-bundle>
  <version>1.0</version>
  <vendor>Rachitskiy Research and Development LLC</vendor>
  <idea-version since-build="8000"/>

  <application-components>
    <!-- Add your application components here -->
	  <component>
		  <implementation-class>com.rrd.intellij.idea.plugins.gca.IdeaUtil</implementation-class>
	  </component>
  </application-components>

  <project-components>
    <!-- Add your project components here -->
  </project-components>

  <actions>
    <!-- Add your actions here -->	  
	  <action id="GenerateChainedAccessors" class="com.rrd.intellij.idea.plugins.gca.GenerateChainedAccessors">
		  <add-to-group group-id="GenerateGroup" anchor="last"/>
	  </action>	  
  </actions>

  <extensions defaultExtensionNs="com.rrd.intellij.idea.plugins">
    <!-- Add your extensions here -->
  </extensions>
</idea-plugin>